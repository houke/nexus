{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "type": "command",
        "bash": "${NEXUS_ROOT}/.github/hooks/scripts/nexus-log-event.sh",
        "env": { "HOOK_EVENT": "sessionStart" },
        "timeoutSec": 5
      }
    ],
    "sessionEnd": [
      {
        "type": "command",
        "bash": "${NEXUS_ROOT}/.github/hooks/scripts/nexus-log-event.sh",
        "env": { "HOOK_EVENT": "sessionEnd" },
        "timeoutSec": 10
      }
    ],
    "userPromptSubmitted": [
      {
        "type": "command",
        "bash": "${NEXUS_ROOT}/.github/hooks/scripts/nexus-log-event.sh",
        "env": { "HOOK_EVENT": "userPromptSubmitted" },
        "timeoutSec": 5
      }
    ],
    "preToolUse": [
      {
        "type": "command",
        "bash": "${NEXUS_ROOT}/.github/hooks/scripts/nexus-log-event.sh",
        "env": { "HOOK_EVENT": "preToolUse" },
        "timeoutSec": 5
      }
    ],
    "postToolUse": [
      {
        "type": "command",
        "bash": "${NEXUS_ROOT}/.github/hooks/scripts/nexus-log-event.sh",
        "env": { "HOOK_EVENT": "postToolUse" },
        "timeoutSec": 5
      }
    ],
    "errorOccurred": [
      {
        "type": "command",
        "bash": "${NEXUS_ROOT}/.github/hooks/scripts/nexus-log-event.sh",
        "env": { "HOOK_EVENT": "errorOccurred" },
        "timeoutSec": 5
      }
    ]
  }
}
